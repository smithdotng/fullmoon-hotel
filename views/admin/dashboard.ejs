<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Admin Dashboard</h1>
</div>

<% if (messages.success) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= messages.success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Total Rooms</h5>
                        <h2 class="card-text"><%= roomCount || 0 %></h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fa fa-bed fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Available Rooms</h5>
                        <h2 class="card-text"><%= availableRooms || 0 %></h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fa fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Total Blog Posts</h5>
                        <h2 class="card-text"><%= blogCount || 0 %></h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fa fa-newspaper-o fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Published Posts</h5>
                        <h2 class="card-text"><%= publishedBlogs || 0 %></h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fa fa-eye fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a href="/admin/rooms" class="btn btn-primary w-100">
                            <i class="fa fa-bed me-2"></i>Manage Rooms
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/admin/rooms/add" class="btn btn-success w-100">
                            <i class="fa fa-plus me-2"></i>Add New Room
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/admin/blog" class="btn btn-info w-100">
                            <i class="fa fa-newspaper-o me-2"></i>Manage Blog
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/admin/blog/add" class="btn btn-warning w-100">
                            <i class="fa fa-edit me-2"></i>Add Blog Post
                        </a>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-3 mb-3">
                        <a href="/" class="btn btn-outline-primary w-100">
                            <i class="fa fa-home me-2"></i>View Website
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Blog Posts Section -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Recent Blog Posts</h5>
                <a href="/admin/blog" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                <% if (recentBlogs && recentBlogs.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentBlogs.forEach(blog => { %>
                                <tr>
                                    <td>
                                        <strong><%= blog.title %></strong>
                                        <% if (blog.featured) { %>
                                            <span class="badge bg-warning ms-1">Featured</span>
                                        <% } %>
                                    </td>
                                    <td><%= blog.category %></td>
                                    <td>
                                        <span class="badge <%= blog.published ? 'bg-success' : 'bg-secondary' %>">
                                            <%= blog.published ? 'Published' : 'Draft' %>
                                        </span>
                                    </td>
                                    <td><%= new Date(blog.createdAt).toLocaleDateString() %></td>
                                    <td>
                                        <a href="/admin/blog/edit/<%= blog._id %>" class="btn btn-sm btn-outline-primary">
                                            <i class="fa fa-edit"></i> Edit
                                        </a>
                                        <form action="/admin/blog/delete/<%= blog._id %>" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                    onclick="return confirm('Are you sure you want to delete this blog post?')">
                                                <i class="fa fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fa fa-newspaper-o fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No blog posts yet.</p>
                        <a href="/admin/blog/add" class="btn btn-primary">Create Your First Blog Post</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>