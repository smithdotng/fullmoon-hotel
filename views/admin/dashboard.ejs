<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Admin Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="/admin/facilities/stats" class="btn btn-sm btn-outline-secondary">
                <i class="fa fa-chart-bar me-1"></i>View Stats
            </a>
            <a href="/admin/facilities/calendar" class="btn btn-sm btn-outline-secondary">
                <i class="fa fa-calendar me-1"></i>Booking Calendar
            </a>
        </div>
    </div>
</div>

<% if (messages.success) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= messages.success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %>

<!-- Statistics Cards -->
<div class="row">
    <!-- Rooms Statistics -->
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Total Rooms</h5>
                        <h2 class="card-text"><%= roomCount || 0 %></h2>
                        <small>Available: <%= availableRooms || 0 %></small>
                    </div>
                    <div class="align-self-center">
                        <i class="fa fa-bed fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Blog Statistics -->
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Blog Posts</h5>
                        <h2 class="card-text"><%= blogCount || 0 %></h2>
                        <small>Published: <%= publishedBlogs || 0 %></small>
                    </div>
                    <div class="align-self-center">
                        <i class="fa fa-newspaper-o fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Facilities Statistics -->
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Facility Bookings</h5>
                        <h2 class="card-text"><%= facilityBookings || 0 %></h2>
                        <small>Confirmed: <%= confirmedFacilityBookings || 0 %></small>
                    </div>
                    <div class="align-self-center">
                        <i class="fa fa-calendar-check-o fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Revenue Statistics -->
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Facility Revenue</h5>
                        <h2 class="card-text">₦<%= (facilityRevenue || 0).toLocaleString() %></h2>
                        <small>This Month</small>
                    </div>
                    <div class="align-self-center">
                        <i class="fa fa-money fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Room Management -->
                    <div class="col-md-3 mb-3">
                        <a href="/admin/rooms" class="btn btn-primary w-100">
                            <i class="fa fa-bed me-2"></i>Manage Rooms
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/admin/rooms/add" class="btn btn-success w-100">
                            <i class="fa fa-plus me-2"></i>Add New Room
                        </a>
                    </div>
                    
                    <!-- Blog Management -->
                    <div class="col-md-3 mb-3">
                        <a href="/admin/blog" class="btn btn-info w-100">
                            <i class="fa fa-newspaper-o me-2"></i>Manage Blog
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/admin/blog/add" class="btn btn-warning w-100">
                            <i class="fa fa-edit me-2"></i>Add Blog Post
                        </a>
                    </div>
                </div>
                
                <div class="row mt-2">
                    <!-- Facilities Management -->
                    <div class="col-md-3 mb-3">
                        <a href="/admin/facilities-config" class="btn btn-secondary w-100">
                            <i class="fa fa-building me-2"></i>Manage Facilities
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/admin/facilities-config/add" class="btn btn-dark w-100">
                            <i class="fa fa-plus-circle me-2"></i>Add Facility
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/admin/facilities" class="btn btn-outline-primary w-100">
                            <i class="fa fa-calendar me-2"></i>View Bookings
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/" class="btn btn-outline-dark w-100">
                            <i class="fa fa-home me-2"></i>View Website
                        </a>
                    </div>
                </div>

                <!-- Sample Data Section (for testing) -->
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="alert alert-light border">
                            <h6 class="alert-heading">Quick Setup</h6>
                            <p class="mb-2">Need sample data to get started?</p>
                            <div class="btn-group">
                                <a href="/admin/facilities-config/sample" class="btn btn-sm btn-outline-success" 
                                   onclick="return confirm('This will replace all existing facilities with sample data. Continue?')">
                                    <i class="fa fa-magic me-1"></i>Add Sample Facilities
                                </a>
                                <a href="/add-sample-rooms" class="btn btn-sm btn-outline-info">
                                    <i class="fa fa-bed me-1"></i>Add Sample Rooms
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity Section -->
<div class="row mt-4">
    <!-- Recent Facility Bookings -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Recent Facility Bookings</h5>
                <a href="/admin/facilities" class="btn btn-sm btn-outline-secondary">View All</a>
            </div>
            <div class="card-body">
                <% if (recentFacilityBookings && recentFacilityBookings.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>Facility</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentFacilityBookings.forEach(booking => { %>
                                <tr>
                                    <td>
                                        <strong><%= booking.facilityName %></strong>
                                        <br>
                                        <small class="text-muted">
                                            <%= booking.user ? booking.user.name : 'Guest' %>
                                        </small>
                                    </td>
                                    <td>
                                        <%= booking.bookingDate %>
                                        <br>
                                        <small class="text-muted"><%= booking.bookingTime %></small>
                                    </td>
                                    <td>
                                        <span class="badge 
                                            <%= booking.status === 'confirmed' ? 'bg-success' : 
                                                booking.status === 'pending' ? 'bg-warning' : 
                                                booking.status === 'cancelled' ? 'bg-danger' : 'bg-secondary' %>">
                                            <%= booking.status %>
                                        </span>
                                    </td>
                                    <td>₦<%= booking.totalAmount %></td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-3">
                        <i class="fa fa-calendar-times fa-2x text-muted mb-2"></i>
                        <p class="text-muted mb-0">No recent facility bookings</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Recent Blog Posts -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Recent Blog Posts</h5>
                <a href="/admin/blog" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                <% if (recentBlogs && recentBlogs.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentBlogs.forEach(blog => { %>
                                <tr>
                                    <td>
                                        <strong><%= blog.title %></strong>
                                        <% if (blog.featured) { %>
                                            <span class="badge bg-warning ms-1">Featured</span>
                                        <% } %>
                                    </td>
                                    <td><%= blog.category %></td>
                                    <td>
                                        <span class="badge <%= blog.published ? 'bg-success' : 'bg-secondary' %>">
                                            <%= blog.published ? 'Published' : 'Draft' %>
                                        </span>
                                    </td>
                                    <td><%= new Date(blog.createdAt).toLocaleDateString() %></td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-3">
                        <i class="fa fa-newspaper-o fa-2x text-muted mb-2"></i>
                        <p class="text-muted mb-0">No blog posts yet</p>
                        <a href="/admin/blog/add" class="btn btn-sm btn-primary mt-2">Create First Post</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Popular Facilities Chart Placeholder -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Popular Facilities</h5>
            </div>
            <div class="card-body">
                <% if (popularFacilities && popularFacilities.length > 0) { %>
                    <div class="row">
                        <% popularFacilities.forEach(facility => { %>
                        <div class="col-md-4 mb-3">
                            <div class="d-flex justify-content-between align-items-center p-3 border rounded">
                                <div>
                                    <h6 class="mb-1"><%= facility._id %></h6>
                                    <small class="text-muted"><%= facility.count %> bookings</small>
                                </div>
                                <div class="text-end">
                                    <strong>₦<%= facility.revenue %></strong>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fa fa-chart-pie fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No facility booking data available yet</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>