        <section class="page">

            <!-- ========================  Page header ======================== -->

            <div class="page-header" style="background-image:url(/assets/images/header-1.jpg)">
                <div class="container">
                    <h2 class="title">Rooms & Suites</h2>
                    <p>Luxury accommodation for business and leisure</p>
                </div>
            </div>

            <!-- === rooms content === -->

            <div class="rooms rooms-category">
                <div class="container">

                    <div class="row">
                        <% if (rooms && rooms.length > 0) { %>
                            <% rooms.forEach((room, index) => { %>
                                <!-- === rooms item === -->
                                <div class="col-sm-6 col-md-<%= index < 2 ? '6' : '4' %>">
                                    <div class="item">
                                        <article>
                                            <div class="image">
                                                <% if (room.images && room.images.length > 0) { %>
                                                    <img src="<%= room.images[0] %>" alt="<%= room.type %>" />
                                                <% } else { %>
                                                    <img src="/assets/images/room-default.jpg" alt="<%= room.type %>" />
                                                <% } %>
                                            </div>
                                            <div class="details">
                                                <div class="text">
                                                    <h2 class="title"><a href="/rooms/<%= room._id %>"><%= room.type %></a></h2>
                                                    <p><%= room.description || 'Luxurious accommodation with premium amenities' %></p>
                                                </div>
                                                <div class="book">
                                                    <div>
                                                        <a href="/rooms/<%= room._id %>" class="btn btn-main">View Details</a>
                                                    </div>
                                                    <div>
                                                        <span class="price h2">â‚¦ <%= room.price.toLocaleString() %></span>
                                                        <span>per night</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <!-- No rooms available -->
                            <div class="col-12 text-center py-5">
                                <i class="fa fa-bed fa-4x text-muted mb-3"></i>
                                <h3 class="text-muted">No Rooms Available</h3>
                                <p class="text-muted">We're currently updating our room inventory. Please check back later.</p>
                                <a href="/" class="btn btn-main mt-3">Return to Home</a>
                            </div>
                        <% } %>
                    </div>

                </div> <!--/container-->
            </div>
        </section>

