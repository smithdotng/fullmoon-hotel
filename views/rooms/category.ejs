    <script>
        // FULLY FIXED BOOKING WIDGET SCRIPT - jQuery version for better compatibility
        $(document).ready(function() {
            var $guests = $('.guests');
            if ($guests.length === 0) return;

            var $guestList = $guests.find('.guest-list');
            var $result = $guests.find('.result');
            var $closeBtn = $guests.find('.qty-close');
            var $applyBtn = $guests.find('.qty-apply');

            var isDropdownOpen = false;

            // Toggle dropdown on result click
            $result.on('click', function(e) {
                e.stopPropagation();
                e.preventDefault();
                $guestList.toggleClass('open');
                isDropdownOpen = $guestList.hasClass('open');
            });

            // Close on X or Apply
            $closeBtn.on('click', function(e) {
                e.stopPropagation();
                e.preventDefault();
                closeDropdown();
            });

            $applyBtn.on('click', function(e) {
                e.stopPropagation();
                e.preventDefault();
                closeDropdown();
            });

            function closeDropdown() {
                $guestList.removeClass('open');
                isDropdownOpen = false;
            }

            // Prevent closing when clicking inside dropdown
            $guestList.on('click', function(e) {
                e.stopPropagation();
            });

            // Close when clicking outside
            $(document).on('click', function(e) {
                if (isDropdownOpen && !$guests.is(e.target) && $guests.has(e.target).length === 0) {
                    closeDropdown();
                }
            });

            // Guest counter - FIXED: Unbind existing events to prevent double firing
            $guests.find('.qty-btn').off('click').on('click', function(e) {
                e.stopPropagation();
                var $this = $(this);
                var field = $this.data('field');
                var $input = $('#' + field);
                var currentVal = parseInt($input.val()) || 0;

                if ($this.hasClass('qty-plus')) {
                    $input.val(currentVal + 1).attr('data-value', currentVal + 1);
                } else if ($this.hasClass('qty-minus') && currentVal > 0) {
                    $input.val(currentVal - 1).attr('data-value', currentVal - 1);
                }

                updateGuestSummary();
                // Disable minus if 0
                $input.closest('li').find('.qty-minus').prop('disabled', parseInt($input.val()) <= 0);
            });

            function updateGuestSummary() {
                var adults = parseInt($('#ticket-adult').val()) || 0;
                var children = parseInt($('#ticket-children').val()) || 0;
                var infants = parseInt($('#ticket-infants').val()) || 0;
                var total = adults + children + infants;

                $('#qty-result').val(total);
                $('#qty-result-text').text(total + ' Guest' + (total !== 1 ? 's' : ''));
            }

            // Initialize
            updateGuestSummary();

            // Datepicker with display update
            if ($.fn.datepicker) {
                $('.datepicker').datepicker({
                    minDate: 0,
                    dateFormat: 'dd MM yy',
                    showOtherMonths: true,
                    dayNamesMin: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'],
                    onSelect: function(dateText) {
                        // Set plain text to input.value to ensure clean form submission
                        $(this).val(dateText);
                        
                        var $parent = $(this).closest('.date');
                        var $valueDiv = $parent.find('.date-value');
                        $valueDiv.text(dateText).addClass('filled');
                    }
                });
            }

            // Initialize owl carousels for room galleries
            $('.owl-slider-gallery').each(function() {
                $(this).owlCarousel({
                    items: 1,
                    loop: true,
                    nav: true,
                    dots: true,
                    autoplay: true,
                    autoplayTimeout: 5000,
                    autoplayHoverPause: true,
                    navText: ["<i class='fa fa-chevron-left'></i>", "<i class='fa fa-chevron-right'></i>"]
                });
            });
        });
    </script>
