                    </div>

                    <!-- toggle-menu -->

                    <div class="toggle-menu"><i class="icon icon-menu"></i></div>

                    <!-- navigation-block -->

                    <div class="navigation-block clearfix">

                        <!-- navigation-left -->

                        <ul class="navigation-left">
                            <li>
                                <a href="/">Home</a>
                            </li>
                            <li>
                                <a href="/rooms" class="active">Rooms <span class="open-dropdown"><i class="fa fa-angle-down"></i></span></a>
                                <ul>
                                    <li><a href="/rooms">All Room Types</a></li>
                                    <li><a href="/rooms/category/Annex">Annex Room</a></li>
                                    <li><a href="/rooms/category/Premiere">Premiere Room</a></li>
                                    <li><a href="/rooms/category/Deluxe">Deluxe Room</a></li>
                                    <li><a href="/rooms/category/Executive">Executive Room</a></li>
                                    <li><a href="/rooms/category/Penthouse">Penthouse Suites</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="/facilities">Facilities</a>
