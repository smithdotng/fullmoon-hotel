    <script>
        $(document).ready(function() {
            // Guests calculation for booking form
            function updateTotalGuests() {
                var adults = parseInt($('#ticket-adult').val()) || 0;
                var children = parseInt($('#ticket-children').val()) || 0;
                var infants = parseInt($('#ticket-infants').val()) || 0;
                var total = adults + children + infants;
                $('#totalGuests').val(total);
                $('#qty-result').val(total);
                $('#qty-result-text').text(total + ' guest' + (total !== 1 ? 's' : ''));
            }

            $('.qty-btn').on('click', function() {
                var $button = $(this);
                var field = $button.data('field');
                var $input = $('#' + field);
                var currentVal = parseInt($input.val()) || 0;
                if ($button.hasClass('qty-minus')) {
                    if (currentVal > 0) $input.val(currentVal - 1);
                } else {
                    $input.val(currentVal + 1);
                }
                updateTotalGuests();
            });

            // Initialize with correct guest count
            updateTotalGuests();

            // Datepicker integration for booking form
            $('#bookingForm').on('submit', function(e) {
                var checkIn = $('#dateArrival input').val();
                var checkOut = $('#dateDeparture input').val();
                var guests = $('#totalGuests').val();
                if (!checkIn || !checkOut || guests < 1) {
                    e.preventDefault();
                    alert('Please select dates and number of guests.');
                    return false;
                }
                // Add dates to form
                $('<input>').attr({type: 'hidden', name: 'checkIn', value: checkIn}).appendTo(this);
                $('<input>').attr({type: 'hidden', name: 'checkOut', value: checkOut}).appendTo(this);
            });
