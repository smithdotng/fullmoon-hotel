                <div class="owl-rooms owl-theme">
                    <% if (rooms && rooms.length > 0) { %>
                        <% rooms.forEach(room => { %>
                        <!-- === rooms item === -->
                        <div class="item">
                            <article>
                                <div class="image">
                                    <% if (room.images && room.images.length > 0) { %>
                                        <img src="<%= room.images[0] %>" alt="<%= room.type %>" />
                                    <% } else { %>
                                        <!-- Fallback images based on room type -->
                                        <% if (room.type.includes('Annex')) { %>
                                            <img src="/assets/images/room-annex.jpg" alt="<%= room.type %>" />
                                        <% } else if (room.type.includes('Premiere')) { %>
                                            <img src="/assets/images/room-premiere.jpg" alt="<%= room.type %>" />
                                        <% } else if (room.type.includes('Deluxe')) { %>
                                            <img src="/assets/images/room-deluxe.jpg" alt="<%= room.type %>" />
                                        <% } else if (room.type.includes('Executive')) { %>
                                            <img src="/assets/images/room-executive.jpg" alt="<%= room.type %>" />
                                        <% } else if (room.type.includes('Penthouse Single')) { %>
                                            <img src="/assets/images/room-penthouse-single.jpg" alt="<%= room.type %>" />
                                        <% } else if (room.type.includes('Penthouse Double')) { %>
                                            <img src="/assets/images/room-penthouse-double.jpg" alt="<%= room.type %>" />
                                        <% } else { %>
                                            <img src="/assets/images/room-default.jpg" alt="<%= room.type %>" />
                                        <% } %>
                                    <% } %>
                                </div>
                                <div class="details">
                                    <div class="text">
                                        <h3 class="title"><a href="/rooms/<%= room._id %>"><%= room.type %></a></h3>
                                        <p><%= room.description || 'Luxurious accommodation with premium amenities' %></p>
                                        <% if (room.amenities && room.amenities.length > 0) { %>
                                            <div class="amenities-preview">
                                                <small>
                                                    <strong>Includes:</strong> 
                                                    <%= room.amenities.slice(0, 2).join(', ') %>
                                                    <% if (room.amenities.length > 2) { %>...<% } %>
                                                </small>
                                            </div>
                                        <% } %>
                                    </div>
                                    <div class="book">
                                        <div>
                                            <a href="/rooms/<%= room._id %>" class="btn btn-main">Book now</a>
                                        </div>
                                        <div>
                                            <span class="price h4">₦ <%= room.price.toLocaleString() %></span>
                                            <span>per night</span>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        </div>
                        <% }) %>
                    <% } else { %>
                        <!-- Fallback content if no rooms in database -->
                        

                        <div class="item">
