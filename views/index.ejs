    <style>
        .guests {
            position: relative;
        }
        .guests .guest-list {
            display: none !important;
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: #fff;
            border: 1px solid #ddd;
            border-top: none;
            z-index: 9999 !important;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            border-radius: 0 0 4px 4px;
            max-height: 300px;
            overflow-y: auto;
        }
        .guests .guest-list.open {
            display: block !important;
        }
        .guests .result {
            cursor: pointer;
        }
        .qty-apply, .qty-close {
            cursor: pointer;
            float: right;
            padding: 12px 15px;
            font-size: 18px;
            color: #666;
        }
        .qty-apply:hover, .qty-close:hover {
            color: #333;
        }
        .guest-list .header {
            background: #f8f8f8;
            padding: 15px;
            border-bottom: 1px solid #eee;
            font-weight: 600;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .date-value {
            opacity: 0.6;
            transition: opacity 0.3s;
        }
        .date-value.filled {
            opacity: 1;
            font-weight: 500;
        }
        .guest-list li.clearfix {
            padding: 15px;
            border-bottom: 1px solid #f0f0f0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .guest-list li.clearfix:last-child {
            border-bottom: none;
        }
        .guest-list li.clearfix > div:first-child {
            flex: 0 0 60px;
        }
        .guest-list li.clearfix > div:nth-child(2) {
            flex: 1;
            margin-left: 15px;
        }
        .guest-list li.clearfix > div:last-child {
            flex: 0 0 auto;
            display: flex;
            gap: 5px;
        }
        .guest-list .qty-amount {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            width: 60px;
            border: none;
            background: none;
        }
        .guest-list .qty-btn {
            background: #f8f8f8;
            border: 1px solid #ddd;
            padding: 8px 12px;
            cursor: pointer;
            font-size: 18px;
            font-weight: bold;
            width: 40px;
            height: 40px;
            border-radius: 4px;
        }
        .guest-list .qty-btn:hover {
            background: #e8e8e8;
        }
        .guest-list .qty-btn:active {
            background: #ddd;
        }
        .guest-list .qty-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
    </style>

