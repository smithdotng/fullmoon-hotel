    <script>
        $(document).ready(function() {
            const $nav = $('.navigation-block');
            const $overlay = $('.mobile-overlay');
            const $toggle = $('.toggle-menu');
            const $close = $('.mobile-menu-close');

            // Open menu
            $toggle.on('click', function() {
                $nav.addClass('open');
                $overlay.addClass('active');
                $('body').addClass('menu-open');
            });

            // Close menu
            $close.on('click', function() {
                $nav.removeClass('open');
                $overlay.removeClass('active');
                $('body').removeClass('menu-open');
            });

            // Close on overlay click
            $overlay.on('click', function() {
                $nav.removeClass('open');
                $overlay.removeClass('active');
                $('body').removeClass('menu-open');
            });

            // Dropdown toggle
            $('.navigation-block .open-dropdown').on('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                $(this).closest('li').toggleClass('expanded');
            });

            // Close menu on link click (except dropdown toggles)
            $('.navigation-block a').not('.open-dropdown').on('click', function() {
                $nav.removeClass('open');
                $overlay.removeClass('active');
                $('body').removeClass('menu-open');
            });

            // Close menu when window is resized to desktop
            $(window).on('resize', function() {
                if ($(window).width() > 991) {
                    $nav.removeClass('open');
                    $overlay.removeClass('active');
                    $('body').removeClass('menu-open');
                }
            });
        });
    </script>
