                                                        <button class="btn btn-main book-facility-btn" 
                                                                data-facility="<%= facility.name %>"
                                                                <%= !user ? 'disabled title="Please login to book facilities"' : '' %>>
                                                            Book Now
                                                        </button>
                                                        <% } else { %>
                                                        <button class="btn btn-default">
                                                            Available for Guests
                                                        </button>
                                                        <% } %>
                                                    </div>
                                                </div>
                                                <% }); %>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- ============ tab #4 - Recreation ============ -->
                                    <div role="tabpanel" class="tab-pane" id="recreation">
                                        <div class="content">
                                            <div class="row">
                                                <% facilities.filter(f => f.type === 'recreation').forEach(facility => { %>
                                                <div class="col-md-6">
                                                    <div class="facility-card">
                                                        <img src="<%= facility.image %>" alt="<%= facility.name %>" class="facility-image">
                                                        <h3><%= facility.name %></h3>
                                                        <p><%= facility.description %></p>
                                                        <div class="facility-meta">
                                                            <p><strong>Capacity:</strong> <%= facility.capacity %> people</p>
                                                            <p><strong>Hours:</strong> <%= facility.operatingHours %></p>
